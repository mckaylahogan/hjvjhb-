<html>
<head>
<title>Particles</title>
<script>
	var canvas;
	var context;
	var particles;
	var timer;
	function degreesToRadians(degrees) {
		return (degrees * Math.PI)/180;
	}
	function makeParticles() {
		particles = [];
		for (var i=0; i<30; i++) {
			particles.push(new Particle());
		}
	}
	function moveParticles() {
		context.globalCompositeOperation = 'source-over';
		context.fillStyle = 'rgba(0,0,0,0.3)';
		context.fillRect(0,0,canvas.width, canvas.height);
		context.globalCompositeOperation = 'lighter';
		for (var i=0; i < particles.length; i++) {
			//draw the particle
			var p = particles[i];
			context.beginPath();
			context.arc(p.x, p.y, p.radius, 0, degreesToRadians(360), true);
			context.fillStyle = p.color;
			context.fill();
			//move the particle
			p.x += p.vx;
			p.y += p.vy;
			if (p.x < -50) {
				p.x = canvas.width + 50;
			}
			if (p.y < -50) {
				p.y = canvas.height + 50;
			}
			if (p.x > canvas.width + 50) {
				p.x = -50;
			}
			if (p.y > canvas.height + 50) {
				p.y = -50;
			}
			p.radius -= 1;
			if (p.radius < 0) {
				p.radius = 1
			}
}
	}
	function Particle() {
		this.x = canvas.width/2;
		this.y = canvas.height/2;
		this.vx = Math.random() * 10 - 5;
		this.vy = Math.random() * 10 - 5;
		var colors = ['red', 'pink', 'orange', 'purple', 'yellow'];
		this.color = colors[Math.floor(Math.random()* colors.length)];
		this.radius = 30;
	}
	window.onload = function() {
		canvas = document.getElementById('canvas');
		context = canvas.getContext('2d');
		//make all the particles
		makeParticles();
		//move the particles every 100 milliseconds
		timer = setInterval(moveParticles, 100);
		timer = setInterval(makeParticles, 4500);
		
		
	}
</script>
</head>
<body>
	<canvas id="canvas" width="500" height="400"></canvas>
</body>
</html>